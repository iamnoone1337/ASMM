# Core
APP_NAME=ASM Subdomain Discovery
API_V1_PREFIX=/api/v1

# Database / Queue
DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/asm
REDIS_URL=redis://redis:6379/0
RQ_QUEUE_NAME=asm-queue

# Security
# Set to enable active bruteforce/resolution
ACTIVE_SCAN_TOKEN=change-me

# Connectors (optional)
CHAOS_API_KEY=
SECURITYTRAILS_API_KEY=

# Limits
CONNECTOR_TIMEOUT_SECONDS=20
CONNECTOR_MAX_CONCURRENCY=10
RESOLVER_MAX_CONCURRENCY=50
PER_TARGET_RATE_LIMIT_PER_SEC=10.0

# Wordlist
WORDLIST_PATH=wordlists/subdomains.txt

# CORS
ALLOW_ORIGINS=*